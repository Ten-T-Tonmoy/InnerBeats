datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  name         String
  email        String    @unique
  password     String
  photos       Photo[]
  whatsapp     String?
  facebook     String?
  phone        String?
  profilePhoto String?
  pastChoices  Choices[]
}

model Photo {
  id       Int     @id @default(autoincrement())
  isLiked  Boolean
  url      String
  uploader User?   @relation(fields: [userId], references: [id])
  userId   Int?
}

model Visitor {
  id        Int      @id @default(autoincrement())
  ip        String
  createdAt DateTime @default(now())
}

model Choices {
  id           Int      @id @default(autoincrement())
  emotion      String
  ChosenReason String
  isHelpful    Boolean
  User         User?    @relation(fields: [userId], references: [id])
  userId       Int?
  createdAt    DateTime @default(now())
}
